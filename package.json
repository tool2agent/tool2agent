{
  "name": "tool2agent",
  "version": "0.0.0",
  "private": true,
  "description": "tool2agent monorepo",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "build:all": "pnpm -r build:all",
    "test": "pnpm -r test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm -r clean",
    "docs": "pnpm run build && typedoc"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=18"
  }
}
